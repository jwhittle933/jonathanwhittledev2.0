{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest/globals": true
  },
  "plugins": ["react", "jest"],
  "rules": {
    "arrow-spacing": 2,
    "semi": [0, "never"],
    "camelcase": 2,
    "no-unused-vars": 1,
    "no-undef": 1,
    "no-console": 1,
    "eol-last": 1,
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error"
  }
}
